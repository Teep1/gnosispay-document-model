# =============================================================================
# Crypto Transaction Analytics Configuration
# Copy this file to .env and replace with your actual values
# =============================================================================

# -----------------------------------------------------------------------------
# Required Settings
# -----------------------------------------------------------------------------

# Tracked ETH Address - The main wallet address to track in analytics
# Format: 0x followed by 40 hexadecimal characters
# Example test address: [REDACTED]
VITE_TRACKED_ETH_ADDRESS=0x0000000000000000000000000000000000000000

# Excluded Contract Address - Contract address to exclude from transaction analysis
# Format: 0x followed by 40 hexadecimal characters
VITE_EXCLUDED_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# -----------------------------------------------------------------------------
# Optional Settings
# -----------------------------------------------------------------------------

# Log Level - Controls verbosity of application logs
# Options: debug, info, warn, error, silent
# Default: warn (production), debug (development)
VITE_LOG_LEVEL=warn

# Enable Debug Mode - Shows additional debug information in UI
# Options: true, false
# Default: false
VITE_ENABLE_DEBUG=false

# API Timeout - Maximum time to wait for API requests (milliseconds)
# Range: 1000 - 60000
# Default: 30000 (30 seconds)
VITE_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Notes
# -----------------------------------------------------------------------------

# Etherscan API key is now entered directly in the UI for security reasons.
# The key is never stored in the browser's localStorage or persisted to disk.

# For production deployments:
# - Set VITE_LOG_LEVEL to 'warn' or 'error'
# - Set VITE_ENABLE_DEBUG to 'false'
# - Consider increasing VITE_API_TIMEOUT for slow networks
